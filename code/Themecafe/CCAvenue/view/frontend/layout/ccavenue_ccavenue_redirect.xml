<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="mobile.top.search" remove="true"/>
        <referenceBlock name="top.search" remove="true" />
        <referenceContainer name="header.panel" remove="true" />
        <referenceContainer name="minicart" remove="true" />
        <referenceBlock name="logo" remove="false" />
        <referenceBlock name="social-icon" remove="true" />
        <referenceBlock name="top.links" remove="true" />
        <referenceContainer name="topNavigation" remove="true" />
        <referenceContainer name="page.main.title" remove="true" />
        
        <referenceBlock name="catalog.compare.link" remove="true" />
        <referenceBlock name="catalog.topnav" remove="true"/>
        <referenceContainer name="footer_top"  remove="true"/>
        <referenceContainer name="footer_middle_area"  remove="true"/>
        <referenceContainer name="footer.area.2"  remove="true"/>
        <referenceContainer name="footer"  remove="true"/>
        <move element="page.messages" destination="content" before="-" />

        <referenceContainer name="content" cacheable="false">
            <block class="Themecafe\CCAvenue\Block\Redirect" name="iframe.view" template="Themecafe_CCAvenue::cciframe.phtml"/>
        </referenceContainer>
    </body>
</page>
